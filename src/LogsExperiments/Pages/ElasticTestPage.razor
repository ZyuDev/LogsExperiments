@page "/elastictest"

<div class="row">

    <div class="col-sm-4">

        <div class="card">

            <div class="card-header">
                <h3>Register event</h3>
            </div>

            <div class="card-body">

                <div class="form-group form-group-sm form-row">

                    <label for="event-name" class="col-sm-4">Event</label>
                    <div class="col-sm-8">
                        <input type="text"
                               id="event-name"
                               list="list-available-events"
                               class="form-control form-control-sm" @bind="@_eventModel.EventName" />
                    </div>

                </div>

                <div class="form-group form-group-sm form-row">

                    <label for="document-name" class="col-sm-4">Document</label>
                    <div class="col-sm-8">
                        <input type="text"
                               id="document-name"
                               list="list-available-documents"
                               class="form-control form-control-sm" @bind="@_eventModel.ObjectName" />
                    </div>

                </div>

                <div class="form-group form-group-sm form-row">

                    <label for="user-name" class="col-sm-4">User</label>
                    <div class="col-sm-8">
                        <input type="text"
                               id="user-name"
                               list="list-available-users"
                               class="form-control form-control-sm" @bind="@_eventModel.UserName" />
                    </div>

                </div>

            </div>

            <div class="card-footer">
                <button class="btn btn-sm btn-outline-primary" @onclick="OnSendClick">Register</button>
            </div>

        </div>


    </div>

</div>

<div class="row" style="margin-top:5px;">

    <div class="col-sm-6">

        <div class="list-group list-group-flush">

            @foreach (var msg in _messagesSend)
            {
                <div class="list-group-item list-group-item-info">@msg</div>
            }

        </div>

    </div>

</div>


<DataListComponent Id="list-available-events" Source="@_availableEvents"></DataListComponent>
<DataListComponent Id="list-available-documents" Source="@_availableDocuments"></DataListComponent>
<DataListComponent Id="list-available-users" Source="@_availableUsers"></DataListComponent>


